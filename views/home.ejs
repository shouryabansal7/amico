<link rel="stylesheet" href="/css/home.css" />
<link rel="stylesheet" href="/css/chat_box.css" />
<div class="home-container">
  <div class="shortcuts">
    <a href="#"
      ><i class="fa-solid fa-newspaper"></i>
      <p>News</p></a
    >
    <a href="#"
      ><i class="fa-solid fa-people-group"></i>
      <p>Groups</p></a
    >
    <a href="#"
      ><i class="fa-solid fa-user-group"></i>
      <p>Friends</p></a
    >
    <a href="#"
      ><i class="fa-solid fa-shop"></i>
      <p>MarketPlace</p></a
    >
    <a href="#"
      ><i class="fa-solid fa-tv"></i>
      <p>Watch</p></a
    >
  </div>
  <div class="posts-container">
    <section id="feed-posts">
      <h4>Posts</h4>
      <% if(locals.user){ %>
      <form action="/posts/create" id="new-post-form" method="POST">
        <textarea
          name="content"
          cols="30"
          rows="3"
          placeholder="Type here ..."
          required
        >
        </textarea>
        <input type="submit" value="Post" />
      </form>
      <% } %>
      <div id="posts-list-container">
        <ul>
          <% for(post of posts){ %> <%- include('_post'); %> <% } %>
        </ul>
      </div>
    </section>
  </div>
  <div class="friends">
    <h4>Friends</h4>
    <section id="user-friends">
      <% for( u of all_users){ %>
      <p>
        <a href="/users/profile/<%= u.id %>"
          ><img
            src="https://avatars.dicebear.com/api/big-ears/:07809000.svg"
          /><%= u.name %></a
        >
      </p>
      <% } %>
    </section>
  </div>
  <%- include('_chat_box') -%>
</div>
<script src="/js/home_post_comment.js"></script>
<script src="/js/home_posts.js"></script>
<!-- import the script file for toggle like and also run it over of the already presnet posts and comments on the page-->
<script src="/js/toggle_likes.js"></script>
<script>
  $(".toggle-like-button").each(function () {
    let self = this;
    let toggleLike = new ToggleLike(self);
  });
</script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.2.0/socket.io.js"></script>
<script src="/js/chat_engine.js"></script>
<% if(locals.user){ %>
<script>
  new ChatEngine("user-chat-box", "<%= locals.user.email %>");
</script>
<% } %>
